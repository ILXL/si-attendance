{
    "version": 2,
    "buildCommand": "mkdir -p api && cp src/index.py api/ && cp -r src/frontend api/",
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "env": {
        "FRONTEND_PATH": "frontend/public"
    },
    "routes": [
        {
            "src": "/signin",
            "dest": "api/index.py"
        },
        {
            "src": "/getcourses",
            "dest": "api/index.py"
        },
        {
            "src": "/noncwidsignin",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ]
}
