{
    "version": 2,
    "buildCommand": "echo 'Build complete'",
    "outputDirectory": ".",
    "builds": [
        {
            "src": "src/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "src/frontend/public/**",
                    "src/attendance.py",
                    "src/utils.py",
                    "src/requirements.txt"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/signin",
            "dest": "src/index.py"
        },
        {
            "src": "/getcourses",
            "dest": "src/index.py"
        },
        {
            "src": "/noncwidsignin",
            "dest": "src/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "src/index.py"
        }
    ]
}
